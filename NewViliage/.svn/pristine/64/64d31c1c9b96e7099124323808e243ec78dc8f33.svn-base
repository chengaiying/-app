function myscroll(){
	var tmphtml="";
	$.ajax({
        type: "post",
        url: "/NewViliage/api/news/NHDTList",
        cache: false,
        async : true,
        dataType: "json",
        success: function (data ,textStatus)
        {
        	if (textStatus == 'success' && data != null) {
						if(data.code==0){
							$.each(data.result, function(n,value) {		
								if(value!=null){
									var content=value.farmer;
									if(content!=undefined){
										var tmp=content.substring(1);
										content=content.replace(tmp,'*');
										tmphtml="<li><a href='"+value.newsUrl+"'>"+value.title+"</a></li>"
										tmphtml=tmphtml+"<li><a href=''>恭喜"+content+",成功贷款"+value.amount+"万元!</a></li>"
									}else{
										tmphtml="<li><a href='"+value.newsUrl+"'>"+value.title+"</a></li>"
										tmphtml=tmphtml+"<li><a href=''></a></li>"
									}					
									$("#myscroll ul").append(tmphtml);	
								}
							});
						}
						$('body').append("<script src=\"js/news_scrol.js\" type=\"text/javascript\" charset=\"utf-8\"><\/script>")
					}
        }
        
     });									    
}
