var now=0;
var loopTime=4000;
var timer;
$(document).ready(function(){
	zc();
	hq();
	bt();
	myscroll();
	//图片轮播		
	$("#banner_list a").not(".on").hide();
	$("#banner_info").html("&nbsp;&nbsp;"+$("#banner_list a img").eq(0).attr("alt"));
	timer=setTimeout("showBannerAuto('left')",loopTime);
	
	//图片轮播滑动处理
	$("#banner_list").on("swipeleft",function(){
		clearTimeout(timer);
	  	showBannerAuto('left'); 
	});
	
	$("#banner_list").on("swiperight",function(){
		clearTimeout(timer);
	  	showBannerAuto('right'); 
	});
	
	//调整banner info位置
	var InfoH=$('#banner_bg').outerHeight();
	$('#banner_bg').css('top',0-InfoH);
	$('#banner_info').css('top',0-InfoH);
		
	//弹出式菜单
	$('#fmenu_click_bg').bind('click',ClickOthersHandler);
	$('.fmenu_click_td').bind('click',ClickOthersHandler);
	
	$('.fmenu_box').each(function(j){//启动时处理每个弹出菜单的位置
		$('.fmenu_td').eq(j).removeClass("on");
		$('.fmenu_box').eq(j).removeClass("on");
		$('.fmenu_box').eq(j).hide();	
		
		
		//var ScnWidth=parseInt($(document).width());
		//var DomWidth=parseInt($('.menu_box').eq(j).css('width'));	
		//var LeftVar=ScnWidth/3*(j+0.5)-DomWidth/2;
		//if(LeftVar<0) LeftVar=0;
		//if(LeftVar+DomWidth>ScnWidth) LeftVart=ScnWidth-DomWidth;
		//$('.menu_box').eq(j).css('left',LeftVar);	
		//alert(LeftVar);			
	});
	
	$('#fmenu_click_bg').hide();//关闭遮罩层
});

function showBannerAuto(dir) {
	$("#banner_list a").eq(now).fadeOut();
	$("#banner li").eq(now).removeClass("on");

	if(dir=="right")
	{
		if(now==0) now=1;
		else if(now==1) now=2;
		else now=0;
	}
	else
	{
		if(now==0) now=2;
		else if(now==1) now=0;
		else now=1;
	}
	
	$("#banner li").eq(now).addClass("on");
	var nowDisp=$("#banner_list a").eq(now);
	nowDisp.fadeIn(500);
	$("#banner_info").html("&nbsp;&nbsp;"+nowDisp.find("img").attr("alt"));
	
	timer=setTimeout("showBannerAuto('left')",loopTime);
}
	
function ClickOthersHandler(e){//点击了非链接区域
	{
		//隐藏原来的
		$('.fmenu_box.on').slideUp();
		$('.fmenu_box.on').removeClass("on");
		$('.fmenu_td.on').removeClass("on");
		$('#fmenu_click_bg').hide();//关闭遮罩层
	}
}
	
$('.fmenu_td').each(function(i){
	$(this).click(function(){//处理菜单点击
		if($(this).attr("class")!="fmenu_td on"){//点击的菜单暂时没弹出
			$('#fmenu_click_bg').show();//开启遮罩层

			//先隐藏原来的
			$('.fmenu_box.on').slideUp();
			$('.fmenu_box.on').removeClass("on");
			$('.fmenu_td.on').removeClass("on");
			
			//显示现在的
			$(this).addClass("on");
			$('.fmenu_box').eq(i).addClass("on");			
			$('.fmenu_box').eq(i).slideDown();

		}else{//点击的菜单之前已经弹出
			//隐藏现在的
			$('.fmenu_box').eq(i).slideUp();
			$(this).removeClass("on");
			$('.fmenu_box').eq(i).removeClass("on");
			
			$('#fmenu_click_bg').hide();//关闭遮罩层
		}
	});
});


function zc(){
	$.post("/NewViliage/api/news/ZCQYList",function(data, textStatus) {
		if (textStatus == 'success' && data != null) {
			if(data.code==0){
				$("#zc").empty();
				var tmphtml="";
				tmphtml=tmphtml+"<div class=\"policy_type_name\">l&nbsp;政策前沿</div><div class=\"policy_more\" onclick=\"myBtnClick(this,'#fafafa','news/news.html?type="+1+"');\">更多...</div>";
				$.each(data.result, function(n,value) {
					if(value!=null){
						tmphtml=tmphtml+"<table width=\"100%\" border=\"0\" cellspacing=\"0\" cellpadding=\"0\" class=\"policy_table\" onclick=\"myBtnClick(this,'#fafafa','"+value.news_url+"');\"><tr valign=\"top\">";
						 tmphtml=tmphtml+"<td rowspan=\"2\" class=\"policy_img\"></td>"; 
						tmphtml=tmphtml+"<td><div class=\"policy_title\">"+value.title+"</div></td></tr><tr valign=\"bottom\"><td style=\"padding-top: 20px;\">";
						tmphtml=tmphtml+"<div class=\"policy_comment\">"+value.time+"></div></td></tr></table>";
				
					}
					
				});
				$("#zc").append(tmphtml);
			}
		}
	},'json');
}


