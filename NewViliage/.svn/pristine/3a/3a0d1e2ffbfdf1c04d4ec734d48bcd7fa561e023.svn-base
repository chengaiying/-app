		fileElementId :'file1',//file控件id
		dataType : 'json',
		success : function (data, status){
            // console.log(data);
			//alert($("#file1").val());
			//alert(data.msg);
			
			if(data.code==0){
				//alert('success');
                $("#J_photoHere_wrap").show();
				$("#J_photoHere").attr('src','/storage/'+data.result).attr('save_data',data.result[0]);
                $("#J_photoReplace").hide();

			}else{
				alert('failed');
			}
			//alert(data.preview);
			/*if(typeof(data.tag)){
